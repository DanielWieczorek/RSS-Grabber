<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="chart" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>

		<class>de.wieczorek.chart.core.business.ChartEntry</class>

		<properties>
		<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
		
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" /> <!-- DB Driver -->
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/CHART_DATACOLLECTION" /> <!-- BD Mane -->
			<property name="javax.persistence.jdbc.user" value="postgres" /> <!-- DB User -->
			<property name="javax.persistence.jdbc.password" value="admin" /> <!-- DB Password -->

			<property name="eclipselink.cache.coordination.thread.pool.size"
				value="1" />
			<property name="eclipselink.connection-pool.default.initial"
				value="1" />
			<property name="eclipselink.connection-pool.node2.min"
				value="1" />
			<property name="eclipselink.connection-pool.node2.max"
				value="1" />
			<property name="eclipselink.cache.type.default" value="NONE" />
			<property name="eclipselink.flush-clear.cache" value="Drop" />
		</properties>

		<shared-cache-mode>NONE</shared-cache-mode>
	</persistence-unit>
</persistence>